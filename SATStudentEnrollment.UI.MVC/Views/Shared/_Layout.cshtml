<!doctype html>
<html lang="en">
<head>
    <title>Hogwarts Student Enrollment | @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @*<link rel="stylesheet" href="~/Content/css/style.css">*@
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" class="img logo rounded-circle mb-5" style="background-image: url(../../Content/images/hogwarts-crest-mariska-sari-cropped.jpg);"></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Students")">Students</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "StudentStatus")">Student Statuses</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Enrollments")">Enrollments</a>
                        </li>

                        <li>
                            <a href="@Url.Action("Index", "ScheduledClasses")">Scheduled Classes</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Courses")">Courses</a>
                        </li>
                    }
                    <li>
                        <a href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Roles Admin", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Users Admin", "Index", "UsersAdmin")</li>
                    }
                </ul>
                <div class="footer">
                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib.com</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
                @*<button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>*@
                <div class="container-fluid hide">

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item topbar hide">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                            {
                                <li class="nav-item topbar hide">
                                    <a class="nav-link" href="@Url.Action("Index", "Students")">Students</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item topbar hide">
                                    <a class="nav-link" href="@Url.Action("Index", "StudentStatus")">Student Statuses</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Scheduling"))
                            {
                                <li class="nav-item topbar hide">
                                    <a class="nav-link" href="@Url.Action("Index", "Enrollments")">Enrollments</a>
                                </li>

                                <li class="nav-item topbar hide">
                                    <a class="nav-link" href="@Url.Action("Index", "ScheduledClasses")">Scheduled Classes</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item topbar hide">
                                    <a class="nav-link" href="@Url.Action("Index", "Courses")">Courses</a>
                                </li>
                            }
                            <li class="nav-item topbar hide">
                                <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                            </li>
                            <li class="nav-item topbar hide">
                                @Html.Partial("_LoginPartial")
                            </li>
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item topbar hide">@Html.ActionLink("Roles Admin", "Index", "RolesAdmin", new { @class = "nav-link" })</li>
                                <li class="nav-item topbar hide">@Html.ActionLink("Users Admin", "Index", "UsersAdmin", new { @class = "nav-link" })</li>
                            }
                            @*<li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>*@
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts")
    @*<script src="~/Content/js/jquery.min.js"></script>
        <script src="~/Content/js/popper.js"></script>
        <script src="~/Content/js/bootstrap.min.js"></script>
        <script src="~/Content/js/main.js"></script>*@

    @RenderSection("scripts", false);
</body>
</html>