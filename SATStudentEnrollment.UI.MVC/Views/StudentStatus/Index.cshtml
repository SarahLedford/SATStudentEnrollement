@model IEnumerable<SATStudentEnrollment.DATA.EF.StudentStatus>

@{
    ViewBag.Title = "Student Statuses";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SSName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SSDescription)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SSName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SSID }, new { @class = "btn btn-primary" }) &nbsp;
                @Html.ActionLink("Details", "Details", new { id = item.SSID }, new { @class = "btn btn-primary" }) &nbsp;
                @Html.ActionLink("Delete", "Delete", new { id = item.SSID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}